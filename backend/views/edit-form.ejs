<form action="/update-event" method="post">

    <h1>Edit <%= event.name %></h1>

    <input type="hidden" id="oldevent" name="oldevent" value="<%= event.name %>"/>

    <!-- -Name of event -->

    <label for="name">Event Name:</label>
    <input type="text" id="name" name="name" value="<%= event.name %>"/>

    <br>
    <br>

    <!-- -Event Category -->

    <label for="category">Event Category:</label>
    <input type="text" id="category" name="category"  value="<%= event.category %>"/>

    <br>
    <br>

    <!-- -Event Description -->

    <label for="description">Event Description:</label>
    <input type="text" id="description" name="description"  value="<%= event.description %>"/>

    <br>
    <br>

    <!-- -Date and Time -->

    <label for="date">Date:</label>
    <input type="text" id="date" name="date"  value="<%= event.date %>"/>

    <br>
    <br>

    <label for="time">Time:</label>
    <input type="text" id="time" name="time"  value="<%= event.time %>"/>

    <br>
    <br>

    <!-- -Location of Event -->

    <label for="location">Event Location:</label>
    <input type="text" id="location" name="location"  value="<%= event.location %>"/>

    <br>
    <br>

    <button type="submit" name="formAction" value="save">Save Event</button>
    <button type="submit" name="formAction" value="delete">Delete Event</button>

</form>